<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900"
      rel="stylesheet"
    />

    <%#
    <link rel="stylesheet" href="css/icon-font.css" />
    %>
    <link rel="stylesheet" href="/stylesheets/landing.css" />
    <%#
    <link rel="shortcut icon" type="image/png" href="img/favicon.png" />
    %>
    <title>Battle Club</title>
  </head>

  <body>
    <!-- <div class="header__logo-box"> -->
    <a href="/">
      <img
        src="/images/logo-white.png"
        alt="Battle Club"
        class="header__logo"
      />
    </a>
    <!-- </div> -->
    <header class="header">
      <div class="header__text-box">
        <h1 class="heading-primary">
          <span class="heading-primary--main">
            Shop
          </span>
          <span class="heading-primary--sub">
            Contact us using the details below to buy our stuff
          </span>
        </h1>
        <a href="/blogs" class="btn btn--white">
          Watch us in action!
        </a>
      </div>
    </header>

    <section class="section-shop">
      <% var i=0 %> <% shops.forEach(function(shop){ %> <% if(i%3==0){ %>
      <div class="row">
        <% } %>
        <div class="col-1-of-3">
          <a href="" class="nostyle">
            <div class="feature-box-shop">
              <img class="feature-box__image" src=" <%= shop.image%> " alt="" />
              <h3 class="heading-tertiary u-margin-bottom-small">
                <%= shop.title%>
              </h3>
            </div>
          </a>
        </div>
        <% i=i+1 %> <% if((i)%3==0){ %>
      </div>
      <% } %> <% }) %>
    </section>

    <footer class="footer">
      <div class="u-center-text u-margin-bottom-big">
        <h2 class="heading-secondary">
          Ways to connect!
        </h2>
      </div>
      <div class="row">
        <div class="story">
          <div class="story__text">
            <h3
              class="heading-tertiary u-margin-bottom-small"
              style="text-align:center"
            >
              email : battleclub55@gmail.com
              <br />
              Phone : 9814786814
            </h3>
          </div>
        </div>
      </div>
      <row> </row>
    </footer>
  </body>
</html>
